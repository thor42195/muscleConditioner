<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="container">
  <h2>Your Favorite blog</h2>
  <div class="row">
    <% @favorites_blogs.each do |favorites| %>
  </div>
  <div class="card">
    <div class="card-header">
      <%= favorites.title %>
    </div>
    <div class="card-body">
      <h5 class="card-title">今日のコンディション：<%= favorites.condition%></h5>
      <p class="card-text"><%= favorites.content %></p>
    <%end %>
    </div>
  </div>
</div>
