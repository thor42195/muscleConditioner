<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<head>
  <meta charset="UTF-8">
</head>
<body>
	<p><%= notice %></p>
	<div class="container">
		<div class="row">
			<% @blogs.each do |blog| %>
			<div class="col-xs-12 col-md-6 blog-panel"></div>
		</div>
		<div aria-hidden="true" aria-labelledby="exampleModalLabel" class="modal fade" id="exampleModal" role="dialog" tabindex="-1">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">メッセージ編集</h5>
						<button aria-label="Close" class="close" data-dismiss="modal" type="button">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
					  	<%= blog.condition %>
						  <%= blog.title %>
						  <%= blog.content %>
					</div>
					<div class="modal-footer">
            <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
      <div class="card-header">
        <%= blog.title %>
      </div>
      <div class="card-body">
        <h5 class="card-title">今日のコンディション：<%= blog.condition %></h5>
        <p class="card-text"><%= blog.content %></p>
        <button class="btn btn-primary" data-target="#exampleModal" data-toggle="modal" type="button">▲</button>
				<% if  current_user.id == blog.user_id  %>
					<%= link_to '詳細', blog_path(blog.id),{class:"btn btn-primary"} %>
					<%= link_to '削除',  blog_path(blog.id), method: :delete, data:{confirm: 'Are you sure?'},class: 'btn btn-danger' %>
					<%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-info' %>
				<% else %>
				  <%= link_to '詳細', blog_path(blog.id),{class:"btn btn-primary"} %>
				<% end %>
				<% end %>
		 </div>
   </div>
</body>
</html>
