<h1>ブログ一覧</h1>
<p><%= notice %></p>
<div class="container">
  <div class="new-blog-link">
    <%= link_to '新規作成ページへ' ,new_blog_path, class: "alert alert-warning" %>
  </div>
  <table>
  <tr>
    <th>タイトル</th>
    <th>コンディション</th>
    <th>内容</th>
  </tr>
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.condition %></td>
          <td><%= blog.content %></td>
          <td><%= link_to 'Show', blog_path(blog.id), class: 'btn btn-success' %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog.id), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', blog_path(blog.id), method: :delate, data:{confirm: 'Are you sure?'},class: 'btn btn-danger' %></td>
        </tr>
      </div>
    <% end %>
  </div>
</div>
